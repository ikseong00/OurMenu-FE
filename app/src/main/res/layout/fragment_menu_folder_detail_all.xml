<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.menuFolder.MenuFolderDetailAllFragment">

    <ImageView
        android:id="@+id/iv_mfda_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_mfda_all_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/pretendard_600"
        android:text="메뉴 가져오기"
        android:textColor="@color/Neutral_900"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_mfda_all_menu"
        app:layout_constraintStart_toEndOf="@id/tv_mfda_all_menu"
        app:layout_constraintTop_toTopOf="@id/tv_mfda_all_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_400"
            android:text="13"
            android:textColor="@color/Neutral_900"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_400"
            android:text="개"
            android:textColor="@color/Neutral_900"
            android:textSize="14sp" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spn_mfda_filter"
        style="@style/Spinner.Email"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="10dp"
        android:popupBackground="@drawable/btn_bg_8_white"
        app:layout_constraintBottom_toBottomOf="@id/tv_mfda_all_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_mfda_all_menu" />

    <HorizontalScrollView
        android:id="@+id/hsv_mfda_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mfda_all_menu">


        <!--  TODO filter 추가   -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_mfda_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_mfda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:chipSpacing="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- chip 이 레이아웃에 자체 패딩이 8dp 정도 있어서 -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mfda_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:fontFamily="@font/pretendard_700"
                    android:text="1"
                    android:textColor="@color/Neutral_White"
                    android:textSize="16sp"
                    app:chipBackgroundColor="@color/Primary_500_main"
                    app:chipCornerRadius="12dp"
                    app:chipEndPadding="0dp"
                    app:chipIcon="@drawable/ic_filter"
                    app:chipIconSize="16dp"
                    app:chipMinHeight="32dp"
                    app:chipStartPadding="16dp"
                    app:textEndPadding="16dp" />


            </com.google.android.material.chip.ChipGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mfda_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/btn_mfda_add_menu"
        app:layout_constraintTop_toBottomOf="@id/hsv_mfda_filter"
        tools:listitem="@layout/item_menu_folder_detail_menu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Neutral_300"
        app:layout_constraintTop_toBottomOf="@id/rv_mfda_menu" />


    <Button
        android:id="@+id/btn_mfda_add_menu"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg_12_n100"
        android:fontFamily="@font/pretendard_600"
        android:letterSpacing="-0.01"
        android:text="메뉴 추가하기"
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>