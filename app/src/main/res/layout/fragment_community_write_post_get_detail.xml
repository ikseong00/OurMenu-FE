<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.menuFolder.post.PostMenuFolderGetDetailFragment">


    <ImageView
        android:id="@+id/iv_cwpgd_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cwpgd_main_image"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:scaleType="center"
        android:src="@drawable/sample_menu_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cwpgd_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:elevation="3dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/Neutral_White" />

    <EditText
        android:id="@+id/tv_cwpgd_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="19dp"
        android:background="@null"
        android:drawableStart="@null"
        android:drawablePadding="4dp"
        android:drawableTint="@color/Neutral_White"
        android:enabled="false"
        android:fontFamily="@font/pretendard_500"
        android:maxLength="10"
        android:text="한강 뷰 맛집"
        android:textColor="@color/Neutral_White"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_cwpgd_main_image"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_cwpgd_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/pretendard_400"
        android:text="메뉴 4개"
        android:textColor="@color/Neutral_White"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_cwpgd_main_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cwpgd_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="true"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_cwpgd_main_image"
        tools:listitem="@layout/item_menu_folder_detail_menu" />


    <Button
        android:id="@+id/btn_cwpgd_add_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg_big"
        android:elevation="13dp"
        android:fontFamily="@font/pretendard_700"
        android:padding="2dp"
        android:text="메뉴 추가하기"
        android:textColor="@color/Neutral_White"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>