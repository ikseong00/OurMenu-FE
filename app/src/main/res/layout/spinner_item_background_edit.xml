<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_spinner_item_background_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true">

    <EditText
        android:id="@+id/tv_spinner_item_background_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"
        android:fontFamily="@font/pretendard_600"
        android:hint="직접 입력하기"
        android:importantForAccessibility="yes"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingVertical="15dp"
        android:text=""
        android:textColor="@color/Neutral_700"
        android:textColorHint="@color/Neutral_500"
        android:textSize="12sp"
        app:backgroundTint="@null"
        android:textCursorDrawable="@color/Primary_500_main"/>

    <ImageView
        android:id="@+id/iv_show_dropdown"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginVertical="15dp"
        android:layout_marginRight="17.5dp"
        android:src="@drawable/ic_polygon_down"
        android:visibility="invisible" />
</FrameLayout>
